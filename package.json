{
  "name": "@marblexyz/wagmi-connector",
  "version": "0.2.6",
  "description": "Marble Wagmi Connector",
  "author": "Superdrop Labs Inc.",
  "type": "module",
  "scripts": {
    "build": "$INIT_CWD/scripts/bin/clean.ts && $INIT_CWD/scripts/bin/build.ts",
    "clean": "$INIT_CWD/scripts/bin/clean.ts",
    "lint": "yarn eslint --fix .",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "changeset:release": "yarn build && changeset publish && git push --tags",
    "changeset:version": "changeset version && yarn install --mode=update-lockfile --no-immutable"
  },
  "files": [
    "dist"
  ],
  "target": "browser",
  "cdnGlobalName": "Marble",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/types/index.d.ts",
  "jsdelivr": "./dist/marble.js",
  "exports": {
    "import": "./dist/es/index.mjs",
    "require": "./dist/cjs/index.js"
  },
  "peerDependencies": {
    "ethers": ">=5.7.1",
    "react": ">=17.0.0"
  },
  "dependencies": {
    "marble-sdk": "^0.1.16",
    "wagmi": "^0.10.11"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/is-ci": "^3.0.0",
    "@types/minimist": "^1.2.2",
    "@types/p-limit": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chalk": "^5.0.1",
    "chalk-template": "^0.4.0",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "gzip-size": "^7.0.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "minimist": "^1.2.6",
    "ora": "^6.1.2",
    "p-limit": "^4.0.0",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "pretty-bytes": "^6.0.0",
    "react": "^18.2.0",
    "react-17": "npm:react@17.0.2",
    "react-dom": "^18.2.0",
    "react-dom-17": "npm:react-dom@17.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "keywords": [
    "react",
    "hooks",
    "eth",
    "ethereum",
    "marble",
    "dapps",
    "wallet",
    "web3",
    "email",
    "crypto"
  ],
  "packageManager": "yarn@3.2.3",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
